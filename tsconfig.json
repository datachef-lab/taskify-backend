{
    "compilerOptions": {
        "target": "ES6",
        "types": ["node", "express"],
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "module": "CommonJS",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "./drizzle.config.js",
        "./src/**/*",
        "./src/**/*.js",
        "./src/types/express.d.ts",
        "./src/types/express.d.js"
    ],
    "exclude": ["dist", "node_modules"]
}
